file = {:C$\backslash$:/Users/fibom/Documents/Mendeley Desktop/Arrangoiz-Arriola et al/Nature/Arrangoiz-Arriola et al. - 2019 - Resolving the energy levels of a nanomechanical os.pdf:pdf},
