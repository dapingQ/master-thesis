issn = {24699934},
journal = {Phys. Rev. A},
number = {3},
pages = {1--24},
title = {{Quantum dynamics of Kerr optical frequency combs below and above threshold: Spontaneous four-wave mixing, entanglement, and squeezed states of light}},
volume = {93},
year = {2016}
}
